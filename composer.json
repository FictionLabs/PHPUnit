{
    "name"              : "jbzoo/phpunit",
    "type"              : "library",
    "description"       : "PHPUnit toolbox with short assert aliases and useful functions",
    "license"           : "MIT",
    "keywords"          : [
        "phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "validation",
        "benchmark", "performance", "speed", "debug", "dump", "jbdump"
    ],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"                       : ">=5.3",

        "jbzoo/misc"                : "^1.1|1.x-dev",
        "jbzoo/utils"               : "^1.7|1.x-dev",

        "squizlabs/php_codesniffer" : "^2.6",
        "sebastian/phpcpd"          : "^2.0",
        "phploc/phploc"             : "^2.1",
        "phpmd/phpmd"               : "^2.4",
        "phpunit/phpunit"           : "^4.8",
        "satooshi/php-coveralls"    : "^1.0",

        "symfony/var-dumper"        : "^2.8|^3.1",
        "symfony/dom-crawler"       : "^2.8|^3.1",
        "symfony/css-selector"      : "^2.8|^3.1",
        "symfony/finder"            : "^2.8|^3.1"
    },
    "require-dev"       : {
        "jbzoo/console"     : "^1.0|1.x-dev",
        "jbzoo/http-client" : "^1.0|1.x-dev",
        "jbzoo/profiler"    : "^1.0|1.x-dev",
        "jbzoo/jbdump"      : "^1.5|1.x-dev"
    },
    "suggest"           : {
        "jbzoo/http-client"  : "For httpRequest()",
        "jbzoo/pimpledumper" : "Dump pimple for autocomplete",
        "jbzoo/console"      : "For cli function"
    },
    "autoload"          : {
        "files" : [
            "src/functions/defines.php",
            "src/functions/aliases.php",
            "src/functions/tools.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "bin"               : [
        "bin/http-server.sh"
    ],
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/PHPUnit/issues"
    }
}
