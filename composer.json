{
    "name"              : "jbzoo/phpunit",
    "type"              : "library",
    "description"       : "PHPUnit toolbox with short assert aliases and useful functions",
    "license"           : "MIT",
    "keywords"          : [
        "phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "validation",
        "benchmark", "performance", "speed"
    ],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"                       : ">=5.3",
        "phpunit/phpunit"           : "^4.8",
        "jbzoo/misc"                : "^1.0",
        "squizlabs/php_codesniffer" : "^2.5",
        "sebastian/phpcpd"          : "^2.0",
        "phploc/phploc"             : "^2.1",
        "phpmd/phpmd"               : "^2.3",
        "satooshi/php-coveralls"    : "^0.7",
        "symfony/var-dumper"        : "^2.8",
        "symfony/dom-crawler"       : "^2.8",
        "symfony/css-selector"      : "^2.8"
    },
    "autoload"          : {
        "files" : [
            "src/defines.php",
            "src/func.aliases.php",
            "src/func.tools.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "scripts"           : {
        "test"      : [
            "@manifest",
            "@autoload",
            "@phpunit",
            "@phpmd",
            "@phpcs",
            "@phpcpd",
            "@phploc"
        ],
        "up"        : [
            "composer self-update",
            "composer update --optimize-autoloader --no-interaction"
        ],
        "manifest"  : "composer validate --no-interaction",
        "autoload"  : "composer dump-autoload --optimize --no-interaction",
        "phpunit"   : "php ./vendor/phpunit/phpunit/phpunit",
        "phpmd"     : "php ./vendor/phpmd/phpmd/src/bin/phpmd ./src text ./vendor/jbzoo/misc/phpmd/jbzoo.xml --verbose",
        "phpcs"     : "php ./vendor/squizlabs/php_codesniffer/scripts/phpcs ./src --standard=./vendor/jbzoo/misc/phpcs/JBZoo/ruleset.xml --report=full",
        "phpcpd"    : "php ./vendor/sebastian/phpcpd/phpcpd ./src --verbose",
        "phploc"    : "php ./vendor/phploc/phploc/phploc ./src --verbose",
        "coveralls" : "php ./vendor/satooshi/php-coveralls/bin/coveralls --verbose"
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/PHPUnit/issues"
    }
}
