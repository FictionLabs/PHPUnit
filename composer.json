{
    "name"              : "jbzoo/phpunit",
    "type"              : "library",
    "description"       : "PHPUnit toolbox with short assert aliases and useful functions",
    "license"           : "MIT",
    "keywords"          : [
        "phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "validation",
        "benchmark", "performance", "speed", "debug", "dump", "jbdump"
    ],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"                       : ">=5.5",
        "phpunit/phpcov"            : "^4.0",
        "phpunit/phpunit"           : "^6.0",
        "phploc/phploc"             : "^3.0|^4.0",
        "phpmd/phpmd"               : "^2.6",
        "sebastian/phpcpd"          : "^3.0",
        "squizlabs/php_codesniffer" : "^2.8|^3.0",
        "ulrichsg/getopt-php"       : "^3.0",
        "jbzoo/misc"                : "^1.2"
    },
    "require-dev"       : {
        "guzzlehttp/guzzle"    : "^6.2",
        "jbzoo/utils"          : "^1.7",
        "jbzoo/http-client"    : "^1.1",
        "jbzoo/profiler"       : "^1.0",
        "jbzoo/jbdump"         : "^1.5",
        "symfony/process"      : "^3.2",
        "symfony/var-dumper"   : "^3.2",
        "symfony/dom-crawler"  : "^3.2",
        "symfony/css-selector" : "^3.2",
        "symfony/finder"       : "^3.2"
    },
    "suggest"           : {
        "jbzoo/http-client"    : "For http-requests (^1.0)",
        "jbzoo/profiler"       : "For runBench() function (^1.0)",
        "jbzoo/jbdump"         : "For dump() function (^1.5)",
        "symfony/var-dumper"   : "For dump() function (^2.8|^3.1)",
        "symfony/process"      : "For cli() function (^2.8|^3.1)",
        "symfony/dom-crawler"  : "For isHtml(not)Contain() function (^2.8|^3.1)",
        "symfony/css-selector" : "For isHtml(not)Contain() function (^2.8|^3.1)",
        "symfony/finder"       : "For CodeStyle tests (^2.8|^3.1)",
        "ulrichsg/getopt-php"  : "For PHPUnit Server (^2.3)"
    },
    "autoload"          : {
        "files" : [
            "src/functions/defines.php",
            "src/functions/aliases.php",
            "src/functions/tools.php",
            "src/functions/global.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "bin"               : [
        "bin/phpunit-server.sh"
    ],
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/PHPUnit/issues"
    }
}
