{
    "name"              : "jbzoo/phpunit",
    "type"              : "library",
    "description"       : "PHPUnit toolbox with short assert aliases and useful functions",
    "license"           : "MIT",
    "keywords"          : [
        "phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "validation",
        "benchmark", "performance", "speed", "debug", "dump", "jbdump"
    ],
    "minimum-stability" : "stable",
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"                       : ">=5.3",

        "ulrichsg/getopt-php"       : "^2.3",

        "jbzoo/misc"                : "^1.2",
        "squizlabs/php_codesniffer" : "^2.6",
        "phpmd/phpmd"               : "^2.4",

        "phploc/phploc"             : "^2.1",
        "sebastian/phpcpd"          : "^2.0",
        "phpunit/phpcov"            : "^2.0",
        "phpunit/phpunit"           : "^4.8",
        "satooshi/php-coveralls"    : "^1.0",

        "symfony/dom-crawler"       : "^2.8|^3.1",
        "symfony/css-selector"      : "^2.8|^3.1",
        "symfony/finder"            : "^2.8|^3.1"
    },
    "require-dev"       : {
        "jbzoo/utils"        : "^1.7",
        "jbzoo/http-client"  : "^1.1",
        "jbzoo/profiler"     : "^1.0",
        "jbzoo/jbdump"       : "^1.5",
        "symfony/process"    : "^2.8|^3.1",
        "symfony/var-dumper" : "^2.8|^3.1"
    },
    "suggest"           : {
        "jbzoo/http-client"   : "For http-requests (^1.0)",
        "jbzoo/profiler"      : "For runBench() function (^1.0)",
        "jbzoo/jbdump"        : "For dump() function (^1.5)",
        "symfony/var-dumper"  : "For dump() function (^2.8|^3.1)",
        "symfony/process"     : "For cli() function (^2.8|^3.1)",
        "ulrichsg/getopt-php" : "For PHPUnit Server (^2.3)"
    },
    "autoload"          : {
        "files" : [
            "src/functions/global.php",
            "src/functions/defines.php",
            "src/functions/aliases.php",
            "src/functions/tools.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "bin"               : [
        "bin/phpunit-server.sh"
    ],
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/PHPUnit/issues"
    }
}
