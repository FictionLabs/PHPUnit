{
    "name"        : "jbzoo/phpunit",
    "type"        : "library",
    "description" : "PHPUnit toolbox with short assert aliases and useful functions around PhpUnit",
    "license"     : "MIT",
    "keywords"    : ["phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "debug"],

    "authors"     : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"                         : ">=7.2",
        "phpunit/phpunit"             : "^8.5|^9.1",
        "phpunit/phpcov"              : "^6.0.1",
        "sempro/phpunit-pretty-print" : "^1.2.2",

        "ulrichsg/getopt-php"         : "^3.3.0"
    },

    "require-dev" : {
        "guzzlehttp/guzzle"              : "^6.5.3",

        "phploc/phploc"                  : "*",
        "phpmd/phpmd"                    : "*",
        "povils/phpmnd"                  : "*",
        "sebastian/phpcpd"               : "*",
        "squizlabs/php_codesniffer"      : "*",
        "phpstan/phpstan"                : "*",
        "vimeo/psalm"                    : "*",
        "clue/graph-composer"            : "*",
        "davidrjonas/composer-lock-diff" : "*",
        "sensiolabs/security-checker"    : "*",


        "jbzoo/utils"                    : "*",
        "jbzoo/data"                     : "*",
        "jbzoo/http-client"              : "*",
        "jbzoo/profiler"                 : "*",
        "jbzoo/jbdump"                   : "*",

        "symfony/process"                : "^4.0||^5.0",
        "symfony/var-dumper"             : "^4.0||^5.0",
        "symfony/dom-crawler"            : "^4.0||^5.0",
        "symfony/css-selector"           : "^4.0||^5.0",
        "symfony/finder"                 : "^4.0||^5.0",

        "roave/security-advisories"      : "dev-master"
    },

    "suggest"     : {
        "jbzoo/http-client"    : "For http-requests (^2.0)",
        "jbzoo/profiler"       : "For runBench() function (^1.0)",
        "jbzoo/jbdump"         : "For dump() function (^1.5)",
        "symfony/var-dumper"   : "For dump() function (^4.4)",
        "symfony/process"      : "For cli() function (^4.4)",
        "symfony/dom-crawler"  : "For isHtml(not)Contain() function (^3.3)",
        "symfony/css-selector" : "For isHtml(not)Contain() function (^3.3)",
        "symfony/finder"       : "For CodeStyle tests (^3.3)"
    },

    "autoload"    : {
        "files" : [
            "src/functions/defines.php",
            "src/functions/aliases.php",
            "src/functions/tools.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },

    "bin"         : [
        "bin/phpunit-server.sh"
    ],

    "config"      : {
        "optimize-autoloader" : true
    },

    "support"     : {
        "issues" : "https://github.com/JBZoo/PHPUnit/issues"
    }
}
