{
    "name"        : "jbzoo/phpunit",
    "type"        : "library",
    "description" : "PHPUnit toolbox with short assert aliases and useful functions",
    "license"     : "MIT",
    "keywords"    : [
        "phpunit", "jbzoo", "aliases", "short-syntax", "testing", "assert", "assertion", "validation",
        "benchmark", "performance", "speed", "debug", "dump", "jbdump"
    ],

    "authors"     : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"                 : ">=7.1",
        "ulrichsg/getopt-php" : "^3.3.0",
        "phpunit/phpcov"      : "^5.0|^6.0",
        "phpunit/phpunit"     : "^8.5|^9.1"
    },

    "require-dev" : {
        "guzzlehttp/guzzle"         : "^6.5.3",

        "phploc/phploc"             : "*",
        "phpmd/phpmd"               : "*",
        "sebastian/phpcpd"          : "*",
        "squizlabs/php_codesniffer" : "*",
        "phpstan/phpstan"           : "*",
        "vimeo/psalm"               : "*",

        "jbzoo/utils"               : "^3.1.2",
        "jbzoo/data"                : "^3.0.1",
        "jbzoo/http-client"         : "^2.1.0",
        "jbzoo/profiler"            : "^1.0.5",
        "jbzoo/jbdump"              : "^1.5.3",

        "symfony/process"           : "^5.0.8",
        "symfony/var-dumper"        : "^5.0.8",
        "symfony/dom-crawler"       : "^5.0.8",
        "symfony/css-selector"      : "^5.0.8",
        "symfony/finder"            : "^5.0.8"
    },

    "suggest"     : {
        "jbzoo/http-client"    : "For http-requests (^2.0)",
        "jbzoo/profiler"       : "For runBench() function (^1.0)",
        "jbzoo/jbdump"         : "For dump() function (^1.5)",
        "symfony/var-dumper"   : "For dump() function (^4.4)",
        "symfony/process"      : "For cli() function (^4.4)",
        "symfony/dom-crawler"  : "For isHtml(not)Contain() function (^3.3)",
        "symfony/css-selector" : "For isHtml(not)Contain() function (^3.3)",
        "symfony/finder"       : "For CodeStyle tests (^3.3)"
    },

    "autoload"    : {
        "files" : [
            "src/functions/defines.php",
            "src/functions/aliases.php",
            "src/functions/tools.php"
        ],
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "src"
        }
    },

    "bin"         : [
        "bin/phpunit-server.sh"
    ],

    "config"      : {
        "optimize-autoloader" : true
    },

    "support"     : {
        "issues" : "https://github.com/JBZoo/PHPUnit/issues"
    }
}
